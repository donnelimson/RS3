@section PageScripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('#pageSizeDropDown').change(function () {
                var value = $(this).val();
                var tempUrl = $(this).data("url");
                var newUrl = tempUrl.replace("pageSizeHolder", value);

                window.location = newUrl;
            });
        });
    </script>
}


