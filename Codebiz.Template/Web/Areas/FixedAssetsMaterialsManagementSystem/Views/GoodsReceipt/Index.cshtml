        .modal_style {
            z-index: 99000 !important;
        }

        .pagination {
            margin-top: 0 !important;
        }

        .supportingDocuments_img {
            width: 80px;
            height: 70px;
        }

        .ng-table-counts > .btn {
            padding: 6px 12px !important;
            font-weight: 400 !important;
            font-size: 14px !important;
