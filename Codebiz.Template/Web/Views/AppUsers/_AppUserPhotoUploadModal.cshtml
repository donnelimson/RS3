<!--MEMBER PHOTO UPLOAD MODAL-->
<script type="text/ng-template" id="AppUserPhotoUploadModal.html">
    <div class="modal-header">
        <h4 class="modal-title" id="modal-title">Crop and Upload {{photoOrSignature}}</h4>
    </div>
    <div class="modal-body" id="modal-body">
        <div class="row">
            <div class=" col-lg-12 fileinput fileinput-new" data-provides="fileinput">
                <div class="row padding-bottom-10">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-lg-6 padding-bottom-20">
                                <center><h4>Photo</h4></center>
                                <br />
                                <div class="fileinput-new crop-image-wrapper" id="fileNew">
                                    <img ng-src="{{currentPhoto || '@Url.Content("~/assets/global/img/no-avatar.png")' }}" alt="" id="no_image" ng-click="attachJcropToExisting()">
                                </div>
                                <div id="croppingPhoto" class="fileinput-preview  crop-image-wrapper fileinput-exists jcrop_target"></div>
                            </div>
                            <div class="col-lg-6">
                                <div class="row" style="text-align: center;">
                                    <h4>Cropped Photo Preview</h4>
                                    <br />
                                    <div class="preview-container" style="display: inline-block">
                                        <div id="croppedPhoto" class="cropped-image-preview thumbnail"
                                             ng-class="isPhoto ? 'photo-crop-preview' : 'signature-crop-preview'">
                                        </div>
                                    </div>
                                </div>
                                <br />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <p ng-show="isExtensionInvalid" style="color: red" ng-cloak>Invalid image format!</p>
                                <p ng-hide="isExtensionInvalid" ng-bind-html="selectedImageFileName"></p>
                                <p ng-show="isFileSizeTooBig" style="color: red" ng-cloak>Image file size too big, please choose another image file that is less than 2MB in size.</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row padding-bottom-10">
                    <div class="col-md-12">
                        <span class="label label-danger">NOTE!</span> Image preview only works in IE10+, FF3.6+, Safari6.0+, Chrome6.0+ and Opera11.1+. In older browsers the filename is shown instead.
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-5">
                        <div class="form-group">
                            <div class="btn-group-justified">
                                <div class="btn-group">
                                    <button type="button" class="btn grey-cararra btn-file" ng-click="">
                                        <i class="glyphicon glyphicon-open fileinput-new"></i>
                                        <span class="fileinput-new">Select Image</span>
                                        <i class="glyphicon glyphicon-open-file fileinput-exists"></i>
                                        <span class="fileinput-exists">Change</span>
                                        <input type="hidden" value="" name="...">
                                        <input type="file" accept=".jpg,.jpeg,.bmp,.png" name="memberPhoto" id="memberPhoto" custom-on-change="attachJcropToNewImage">
                                    </button>
                                </div>
                                <div class="btn-group fileinput-exists destroy" data-dismiss="fileinput" style="padding-left: 10px;" id="removePhotoBtn" ng-click="removePhoto()">
                                    <button type="button" class="btn btn-danger">
                                        <i class="fa fa-remove"></i>
                                        <span class="">Remove</span>
                                    </button>
                                </div>
                                <div class="btn-group" style="padding-left: 10px;">
                                    <button type="button" class="btn btn-success" id="cropPictureBtn"
                                            ng-disabled="hasNoPhoto || isFileSizeTooBig" ng-click="uploadPhoto()">
                                        <i class="fa fa-crop"></i>
                                        <span class="">Crop</span>
                                    </button>
                                </div>
                                <div class="btn-group" style="padding-left: 10px;">
                                    <button type="button" class="btn grey" ng-click="cancel()">
                                        <i class="fa fa-close"></i>
                                        <span class="">Close</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <style>
        .modal-backdrop {
            z-index: 100000 !important;
        }

        .modal {
            z-index: 100001 !important;
        }
        input[type="radio"] {
            visibility: hidden;
        }
    </style>
</script>
<!--END MODAL MEMBER PHOTO UPLOAD-->