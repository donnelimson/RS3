<script type="text/ng-template" id="WorkOrderSaveModal.html">
    <!-- MODAL HEADER -->
    <div class="modal-header">
        <h4 class="form-sub-title">Work Order - {{addOrEdit}}</h4>
    </div>
    <!-- MODAL BODY -->
    <div id="modal-body" class="modal-body" ng-form="saveWorkOrderForm">
        <div class="form-body">
            <div class="row">
                <div class="col-md-12">
                    <!-- TEXTBOX FOR CODE -->
                    <div class="form-group" style="margin-right:5px" ng-class="saveWorkOrderForm.Code.$invalid && (saveWorkOrderForm.Code.$dirty || formSubmitted) ? 'has-error' : ''">
                        <label class="control-label">Code</label><span class="required"> * </span>
                        <input type="text" class="form-control" name="Code" ng-required="true" ng-model="workOrder.Code" />
                        <span color="red" ng-show="saveWorkOrderForm.Code.$error.required && formSubmitted" class="text-danger
                                  field-validation-error"><small>The Work Order code is required.</small></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <!-- TEXTBOX FOR NAME -->
                    <div class="form-group" ng-class="saveWorkOrderForm.Name.$invalid && (saveWorkOrderForm.Name.$dirty || formSubmitted) ? 'has-error' : ''">
                        <label class="control-label">Name</label><span class="required"> * </span>
                        <input type="text" class="form-control" name="Name" ng-model="workOrder.Name" ng-required="true" />
                        <span color="red" ng-show="saveWorkOrderForm.Name.$error.required && formSubmitted" class="text-danger
                                  field-validation-error"><small>The Work Order name is required.</small></span>
                    </div>
                </div>
            </div>
            <div class="form-actions">
            </div>
        </div>
    </div>
    <!--Modal Footer-->
    <div class="modal-footer pull-left">
        <!--Actions -->
        <button class="btn btn-success" ng-click="saveWorkOrder()">
            <span class="glyphicon glyphicon-ok"></span> Save
        </button>
        <button class="btn btn-default" ng-click="cancel()">
            <span class="glyphicon glyphicon-warning-sign"></span>&nbsp; Cancel
        </button>
    </div>
    <div class="clearfix"></div>
</script>
