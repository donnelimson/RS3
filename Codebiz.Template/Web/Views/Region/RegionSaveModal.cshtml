<script type="text/ng-template" id="RegionSaveModal.html">
    <!--Modal Head-->
    <div class="modal-header">
        <h4 class="form-sub-title">{{addOrEdit}} Region</h4>
    </div>
    <!--Modal Body-->
    <div id="modal-body" class="modal-body" ng-form="saveRegionForm">
        <!--Modal Body-->
        <div class="form-body">
            <!--Modal Body Content -->
            <div class="row">
                <!--Name Textbox -->
                <div class="col-md-12">
                    <div class="form-group" ng-class="saveRegionForm.Name.$invalid && (saveRegionForm.Name.$dirty || formSubmitted) ? 'has-error' : ''">
                        <label class="control-label">Name</label><span class="required"> * </span>
                        <input type="text" class="form-control" name="Name" ng-model="region.Name" ng-required="true" tabindex="1" maxlength="100" alphanumeric-dash-only />
                        <span color="red" ng-show="saveRegionForm.Name.$error.required &&(saveRegionForm.Name.$dirty || formSubmitted)" class="text-danger
                                        field-validation-error"><small>Name is required.</small></span>
                    </div>
                </div>
                <!--Abbreviation Textbox -->
                <div class="col-md-12">
                    <div class="form-group" ng-class="saveRegionForm.Abbreviation.$invalid && (saveRegionForm.Abbreviation.$dirty || formSubmitted) ? 'has-error' : ''">
                        <label class="control-label">Abbreviation</label><span class="required"> * </span>
                        <input type="text" class="form-control" name="Abbreviation" ng-model="region.Abbreviation" ng-required="true" tabindex="2" maxlength="100" alphanumeric-dash-only />
                        <span color="red" ng-show="saveRegionForm.Abbreviation.$error.required && (saveRegionForm.Abbreviation.$dirty || formSubmitted)" class="text-danger
                                         field-validation-error"><small>Abbreviation is required.</small></span>
                    </div>
                </div>
            </div>
            <!--End Modal Body -->
        </div>
    </div>
    <!--Modal Footer-->
    <div class="modal-footer pull-left">
        <div class="form-actions">
            <!--Actions -->
            <button class="btn btn-success" style="width:90px;" ng-click="saveRegion()">
                <span class="glyphicon glyphicon-ok"></span> {{isEditing ? 'Update' : 'Save'}}
            </button>
            <button class="btn btn-default" style="width:90px;" ng-click="cancel()">
                <span class="glyphicon glyphicon-warning-sign"></span>&nbsp; Cancel
            </button>
        </div>
    </div>
    <div class="clearfix"></div>
</script>
