<script type="text/ng-template" id="MeterReadingRemarksSaveModal.html">
    <!-- MODAL HEADER -->
    <div class="modal-header">
        <h4 class="form-sub-title">Meter Reading Remarks - {{addOrEdit}}</h4>
    </div>
    <!-- MODAL BODY -->
    <div id="modal-body" class="modal-body" ng-form="saveMeterReadingRemarksForm">
        <div class="form-body">
            <div class="row">
                <div class="col-md-12">
                    <!-- TEXTBOX FOR CODE -->
                    <div class="form-group" style="margin-right:5px" ng-class="saveMeterReadingRemarksForm.Code.$invalid && (saveMeterReadingRemarksForm.Code.$dirty || formSubmitted) ? 'has-error' : ''">
                        <label class="control-label">Code</label><span class="required"> * </span>
                        <input type="text" class="form-control" name="Code" ng-required="true" ng-model="meterReadingRemarks.Code" maxlength="20" alphanumeric-slash-dash-only/>
                        <span color="red" ng-show="saveMeterReadingRemarksForm.Code.$error.required && formSubmitted" class="text-danger
                                  field-validation-error"><small>The Code is required.</small></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <!-- TEXTBOX FOR NAME -->
                    <div class="form-group" ng-class="saveMeterReadingRemarksForm.Name.$invalid && (saveMeterReadingRemarksForm.Name.$dirty || formSubmitted) ? 'has-error' : ''">
                        <label class="control-label">Name</label><span class="required"> * </span>
                        <input type="text" class="form-control" name="Name" ng-model="meterReadingRemarks.Name" ng-required="true" maxlength="300" alphanumeric-slash-dash-only/>
                        <span color="red" ng-show="saveMeterReadingRemarksForm.Name.$error.required && formSubmitted" class="text-danger
                                  field-validation-error"><small>The Name is required.</small></span>
                    </div>
                </div>
            </div>
            <div class="form-actions">
            </div>
        </div>
    </div>
    <!--Modal Footer-->
    <div class="modal-footer pull-left">
        <!--Actions -->
        <button class="btn btn-success" style="width:90px;" ng-click="saveMeterReadingRemarks()">
            <span class="glyphicon glyphicon-ok"></span> {{addOrEdit == 'Add' ? 'Save' : 'Update'}}
        </button>
        <button class="btn btn-default" style="width:90px;" ng-click="cancel()">
            <span class="glyphicon glyphicon-warning-sign"></span>&nbsp; Cancel
        </button>
    </div>
    <div class="clearfix"></div>
</script>
