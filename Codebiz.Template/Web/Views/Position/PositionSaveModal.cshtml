<script type="text/ng-template" id="PositionSaveModal.html">
    <!--Modal Head-->
    <div class="modal-header">
        <h4 class="form-sub-title">{{addOrEdit}} Position</h4>
    </div>
    <!--Modal Body-->
    <div id="modal-body" class="modal-body" ng-form="savePositionForm">
        <!--Modal Body-->
        <div class="form-body">
            <!--Modal Body Content -->
            <div class="row">
                <!--Code Textbox -->
                <div class="col-md-12">
                    <div class="form-group" ng-class="savePositionForm.Code.$invalid && (savePositionForm.Code.$dirty || formSubmitted) ? 'has-error' : ''">
                        <label class="control-label">Code</label><span class="required"> * </span>
                        <input type="text" class="form-control" name="Code" ng-model="position.Code" ng-required="true" maxlength="100" alphanumeric-dash-only />
                        <span color="red" ng-show="savePositionForm.Code.$error.required && (savePositionForm.Code.$dirty || formSubmitted)" class="text-danger
                                        field-validation-error"><small>Code is required.</small></span>
                    </div>
                </div>
            </div>
            <!--Name Textbox -->
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group" ng-class="savePositionForm.Name.$invalid && (savePositionForm.Name.$dirty || formSubmitted) ? 'has-error' : ''">
                        <label class="control-label">Name</label><span class="required"> * </span>
                        <input type="text" class="form-control" name="Name" ng-model="position.Name" ng-required="true" maxlength="100" alphanumeric-dash-only />
                        <span color="red" ng-show="savePositionForm.Name.$error.required && (savePositionForm.Name.$dirty || formSubmitted)" class="text-danger
                                         field-validation-error"><small>Name is required.</small></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group form-md-checkboxes">
                        <div class="md-checkbox-inline">
                            <div class="md-checkbox">
                                <input type="checkbox" class="md-check" id="isManagerCheckbox"
                                       ng-model="position.IsManager" ng-click="forManager(position.IsManager)"
                                       ng-true-value="true" ng-false-value="false">
                                <label for="isManagerCheckbox">
                                    <span class="inc"></span>
                                    <span class="check"></span>
                                    <span class="box"></span>
                                </label>
                                Manager
                            </div>
                            <div class="md-checkbox">
                                <input type="checkbox" class="md-check" id="isHeadOfficerCheckbox"
                                       ng-model="position.IsHeadOfficer" ng-click="forHeadOfficer(position.IsHeadOfficer)"
                                       ng-true-value="true" ng-false-value="false">
                                <label for="isHeadOfficerCheckbox">
                                    <span class="inc"></span>
                                    <span class="check"></span>
                                    <span class="box"></span>
                                </label>
                                Head Officer
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--End Modal Body -->
        </div>
    </div>
    <!--Modal Footer-->
    <div class="modal-footer pull-left">
        <div class="form-actions">
            <!--Actions -->
            <button class="btn btn-success" style="width:90px;" ng-click="savePosition()">
                <span class="glyphicon glyphicon-ok"></span> {{saveOrUpdate}}
            </button>
            <button class="btn btn-default" style="width:90px;" ng-click="cancel()">
                <span class="glyphicon glyphicon-warning-sign"></span>&nbsp; Cancel
            </button>
        </div>
    </div>
    <div class="clearfix"></div>
</script>
